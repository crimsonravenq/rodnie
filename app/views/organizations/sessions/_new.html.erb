<%= form_for(:organization, :url => session_path(:organization)) do |f| %>
 <div class="fieldone loginfield">
                  <%= f.label :email, 'войти с помощью email',:class => "logolable " %>
                  <%= f.email_field :email, autofocus: true, :placeholder => "Ваш e-mail",:class => "form-control" %>
                </div>

                <div class="field2 loginfield">
                  
                  <%= f.password_field :password, autocomplete: "off", :placeholder => "Ваш пароль",:class => "form-control" %>
                </div>

                <% if devise_mapping.rememberable? -%>
                 
                <% end -%>

                <div class="actions">
                  <%= f.submit "ВОЙТИ", class: "btn btn-submit mybt" %>
                </div>
<% end %>